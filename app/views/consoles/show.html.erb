<br>
<h2><%= @console.name %></h2>
<div class="container-show">
    <div class="cards-color">
      <div class="card">
        <p><strong> This console is from: </strong><%=@console.year %></p>
      </div>
      <div class="card">
        <p><strong>Learn more about this console: </strong><%=@console.description %></p>
      </div>
      <div class="card">
        <p><strong>This console is located at: </strong><%= @console.address %></p>
      </div>
      <div class="card">
        <p><strong>This console is: </strong><%= @console.price_per_day %><strong> $ a day</strong></p>
      </div>
    </div>

  <div class="flexbox">
    <div class="button-show">
      <%= link_to 'Delete', console_path(@console),
      data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
    </div>
    <div class="button-show">
      <%= link_to 'Edit', edit_console_path %>
    </div>
    <div class="button-show">
      <%= link_to 'Book it', new_console_booking_path(@console) %>
    </div>
  </div>

  <br>
  <h2><small>Reviews</small></h2>
  <br>
  <br>
  <div class="text-center">
    <div class="d-flex flex-wrap">
        <div class="simple-form">
          <%= simple_form_for [@console, @review] do |f| %>
            <%= f.input :rating, class: "rating-form" %>
            <%= f.input :content %>
            <%= f.button :submit, class: "button-show"%>
          <% end %>
        </div>
      <div class="col-6">
        <div class="list-group">
          <% @console.reviews.each do |review| %>
            <% if review.rating == 5 %>
                <li class="list-item">
                  <%= review.content %><span style="color: gold;">★★★★★</span>
                  <%= link_to "Delete",
                    review_path(review), class: "delete-button",
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
                  %>
                </li>
              <% elsif review.rating == 4 %>
                <li class="list-item">
                  <%= review.content %><span style="color: gold;">★★★★</span>
                  <%= link_to "[Delete]",
                    review_path(review), class: "delete-button",
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
                  %>
                </li>
              <% elsif review.rating == 3 %>
                <li class="list-item">
                  <%= review.content %><span style="color: gold;">★★★</span>
                  <%= link_to "[Delete]",
                    review_path(review), class: "delete-button",
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
                  %>
                </li>
              <% elsif review.rating == 2 %>
                <li class="list-item">
                  <%= review.content %> <span style="color: gold;">★★</span>
                  <%= link_to "[Delete]",
                    review_path(review), class: "delete-button",
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
                  %>
                </li>
              <% else %>
                <li class="list-item">
                  <%= review.content %> <span style="color: gold;">★</span>
                  <%= link_to "[Delete]",
                    review_path(review), class: "delete-button",
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
                  %>
                </li>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
